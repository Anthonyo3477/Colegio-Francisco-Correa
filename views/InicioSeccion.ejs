<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <title>Inicio de Sesión</title>
    <link rel="stylesheet" href="/css/inicioSeccion.css">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <!-- Navbar -->
    <%- include('partials/navbar') %>
        <header>
            <h1>Colegio Manuel Francisco Correa</h1>
            <p>Bienvenidos a nuestra comunidad educativa</p>
        </header>

        <main class="container mt-5 pt-3">
            <div class="card mx-auto" style="max-width: 450px;">
                <div class="card-body">
                    <!-- Tabs -->
                    <ul class="nav nav-tabs mb-3" id="authTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="login-tab" data-bs-toggle="tab" data-bs-target="#login" type="button" role="tab">Iniciar Sesión</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="register-tab" data-bs-toggle="tab" data-bs-target="#register" type="button" role="tab">Registrarse</button>
                        </li>
                    </ul>

                    <div class="tab-content" id="authTabsContent">
                        <!-- Login -->
                        <div class="tab-pane fade show active" id="login" role="tabpanel">
                            <form id="loginForm" method="POST" action="/login">
                                <h2 class="text-center mb-4">Inicio de Sesión</h2>
                                <div class="mb-3">
                                    <label for="LoginEmail" class="form-label">Correo Electrónico</label>
                                    <input type="email" class="form-control" id="LoginEmail" name="correo" required>
                                </div>
                                <div class="mb-3">
                                    <label for="LoginPassword" class="form-label">Contraseña</label>
                                    <input type="password" class="form-control" id="LoginPassword" name="contrasena" required>
                                </div>
                                <div>
                                    <a href="/" class="btn btn-secondary">Ingresar </a>
                                </div>
                                <!-- <button type="submit" class="btn btn-primary w-100" id="btnLogin">Ingresar</button> -->
                            </form>

                            <!-- Botón para volver al home -->
                            <div class="text-center mt-3">
                                <a href="/" class="btn btn-secondary">Volver al Inicio</a>
                            </div>
                        </div>

                        <!-- Registro -->
                        <div class="tab-pane fade" id="register" role="tabpanel">
                            <form id="registerForm">
                                <h2 class="text-center mb-4">Registrarse</h2>
                                <div class="mb-3">
                                    <label for="RegistrarRut" class="form-label">Rut</label>
                                    <input type="text" class="form-control" id="RegistrarRut" name="rut_usuario" required>
                                </div>
                                <div class="mb-3">
                                    <label for="RegisterNombre" class="form-label">Nombre Completo</label>
                                    <input type="text" class="form-control" id="RegisterNombre" name="nombre_usuario" required>
                                </div>
                                <div class="mb-3">
                                    <label for="RegisterEmail" class="form-label">Correo Electrónico</label>
                                    <input type="email" class="form-control" id="RegisterEmail" name="correo_usuario" required>
                                </div>
                                <div class="mb-3">
                                    <label for="RegisterPassword" class="form-label">Contraseña</label>
                                    <input type="password" class="form-control" id="RegisterPassword" name="contrasena_usuario" required>
                                </div>
                                <div class="mb-3">
                                    <label for="RegisterTelefono" class="form-label">Teléfono</label>
                                    <input type="text" class="form-control" id="RegisterTelefono" name="telefono" required pattern="[0-9]{9,15}">
                                </div>
                                <div class="mb-3">
                                    <label for="RegisterDireccion" class="form-label">Dirección</label>
                                    <textarea class="form-control" id="RegisterDireccion" name="direccion" rows="2" required></textarea>
                                </div>
                                <div class="mb-3">
                                    <label for="RegisterRol" class="form-label">Rol</label>
                                    <select class="form-control" id="RegisterRol" name="rol" required>
                                        <option value="Usuario">Usuario normal</option>
                                        <option value="Administrador">Administrador</option>
                                    </select>
                                </div>
                                <button type="button" class="btn btn-success w-100"
                                    id="btnRegister">Registrarse</button>

                                <!-- Botón para volver al home -->
                                <div class="text-center mt-3">
                                    <a href="/" class="btn btn-secondary">Volver al Inicio</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <!-- Footer -->
        <footer>
            <%- include('partials/footer') %>
        </footer>

        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

        <!-- Validaciones -->
        <script>
            document.getElementById('btnRegister').addEventListener('click', async function (e) {
                e.preventDefault();

                const rut_usuario = document.getElementById('RegistrarRut').value.trim();
                const nombre_usuario = document.getElementById('RegisterNombre').value.trim();
                const correo_usuario = document.getElementById('RegisterEmail').value.trim();
                const contrasena_usuario = document.getElementById('RegisterPassword').value.trim();
                const telefono = document.getElementById('RegisterTelefono').value.trim();
                const direccion = document.getElementById('RegisterDireccion').value.trim();

                if (!rut_usuario || !nombre_usuario || !correo_usuario || !contrasena_usuario || !telefono || !direccion) {
                    alert('Por favor, complete todos los campos.');
                    return;
                }

                try {
                    const res = await fetch('/register', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ rut_usuario, nombre_usuario, correo_usuario, contrasena_usuario, telefono, direccion })
                    });

                    if (res.ok) {
                        alert('Registro exitoso. Ahora puede iniciar sesión.');
                        document.getElementById('registerForm').reset();
                        document.getElementById('login-tab').click();
                    } else {
                        const data = await res.json();
                        alert(data.error || 'Error al registrar.');
                    }
                } catch (err) {
                    console.error(err);
                    alert('Error de conexión con el servidor.');
                }
            });
        </script>
</body>

</html>